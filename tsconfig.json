{
    "compilerOptions": {
        "module": "ES2020",
        "target": "ES2020",
        "types": [],
        "lib": ["es2020", "DOM"],
        "strict": true,
        "removeComments": true,
        "sourceMap": true,
        "incremental": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
          "*":         ["src/script/*","src/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
}