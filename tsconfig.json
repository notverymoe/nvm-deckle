{
    "compilerOptions": {
        "module": "ES6",
        "target": "ES6",
        "strict": true,
        "removeComments": true,
        "sourceMap": true,
        "incremental": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
          "*":         ["src/script/*","src/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
}